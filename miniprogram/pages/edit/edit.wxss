/* pages/edit/edit.wxss */
:host {
  display: block;
}

.form {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  min-height: 100vh;
}

.content {
  outline: none;
  width: 100%;
  min-height: 5em;
  padding: 16rpx;
  box-sizing: border-box;
}

.tag {
  padding: 16rpx;
}

.images {
  padding: 16rpx;
}

lib-rule {
  padding: 0 16rpx;
}

.share {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
}

.flex-auto {
  flex: auto;
}

.footer {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
